{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017", "esnext"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["../node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["../src/typings/*"]
    }
  },

  "exclude": ["build", "node_modules", "scripts", "src/scripts"]
}
